{
  "name": "port-github-migration",
  "version": "1.0.0",
  "description": "Migration tool for Port entities from GitHub App to GitHub Ocean",
  "main": "dist/index.js",
  "bin": {
    "port-migrate": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:binary": "npm run build && pkg package.json",
    "dev": "ts-node src/cli.ts",
    "migrate": "npx ts-node src/cli.ts migrate githubRepository --dry-run",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "preferGlobal": true,
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "prettier": "^3.1.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "bin",
    "compress": "Brotli",
    "assets": [
      "node_modules/axios/**/*"
    ]
  }
}
